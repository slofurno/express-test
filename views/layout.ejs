	<script>
	function mapQueryString(s){
		  return s.split('&')
	  .map(function(kvp){
			return kvp.split('=');
	  }).reduce(function(sum,current){
			var key = current[0];
			var value = decodeURIComponent(current[1]);
			sum[key] = value;
			return sum;
	  },{});
	}

	var qs = mapQueryString(location.search.substr(1));
	/*
	var options = {
		method,
		url,
		body,
